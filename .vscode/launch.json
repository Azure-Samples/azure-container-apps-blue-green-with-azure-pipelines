  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Album UI via NPM",
      "type": "node",
      "request": "launch",
      "preLaunchTask": "build",
      "cwd": "${workspaceFolder}/src",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development",
        "BACKGROUND_COLOR": "white",
        "API_BASE_URL": "http://localhost:3500"
      }
    }
  ]
}
